# ============================================================================
# SDC - MySQL PRIMARY para PRODUÇÃO
# Otimizado para alta performance e disponibilidade
# ============================================================================

[mysqld]
# ==========================================
# Identificação (Replicação)
# ==========================================
server-id = 1
log-bin = mysql-bin
binlog-format = ROW
gtid-mode = ON
enforce-gtid-consistency = ON
log-slave-updates = ON
binlog-expire-logs-seconds = 604800
sync-binlog = 1

# ==========================================
# Encoding
# ==========================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# ==========================================
# InnoDB - Alta Performance
# ==========================================
default-storage-engine = InnoDB

# Buffer Pool (ajuste conforme RAM disponível - 70% da RAM)
innodb_buffer_pool_size = 2G
innodb_buffer_pool_instances = 4

# Log files
innodb_log_file_size = 512M
innodb_log_buffer_size = 64M

# Flush settings (balanceado entre performance e durabilidade)
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_doublewrite = 1

# I/O threads
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Outros
innodb_file_per_table = 1
innodb_stats_on_metadata = 0
innodb_lock_wait_timeout = 50
innodb_deadlock_detect = ON

# ==========================================
# Conexões
# ==========================================
max_connections = 500
max_connect_errors = 100
wait_timeout = 300
interactive_timeout = 300
net_read_timeout = 60
net_write_timeout = 60

# ==========================================
# Query Cache (desabilitado no MySQL 8.0+)
# ==========================================
# query_cache_type = 0
# query_cache_size = 0

# ==========================================
# Threads e Cache
# ==========================================
thread_cache_size = 32
table_open_cache = 4000
table_definition_cache = 2000
tmp_table_size = 64M
max_heap_table_size = 64M

# ==========================================
# Sort e Join
# ==========================================
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 2M

# ==========================================
# Slow Query Log
# ==========================================
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 0
log_throttle_queries_not_using_indexes = 10

# ==========================================
# Error Log
# ==========================================
log_error = /var/log/mysql/error.log
log_error_verbosity = 2

# ==========================================
# SQL Mode
# ==========================================
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# ==========================================
# Segurança
# ==========================================
local_infile = 0
symbolic-links = 0
skip-name-resolve = 1

# ==========================================
# Performance Schema (para monitoramento)
# ==========================================
performance_schema = ON
performance_schema_max_table_instances = 500
performance_schema_max_socket_instances = 100

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

